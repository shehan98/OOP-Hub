@using EmpiteIMS.Models.Inventory
@using Microsoft.AspNetCore.Components

@using EmpiteIMS
@using EmpiteIMS.Views.Shared.Components
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Authentication
@using System.Net.Http
 

<AuthorizeView Roles="@($"admin, manager")">
    <h1>Add New Item</h1>
    <form method="post" action="AddItem" class="mt-5">
      <div class="mb-3">
        <label for="" class="form-label">Item Code</label>
        <input type="number" class="form-control" asp-for="@getInventoryViewModel.ItemCode">
      </div>
      <div class="mb-3">
        <label for="" class="form-label">Item Name</label>
        <input type="text" class="form-control" asp-for="@getInventoryViewModel.ItemName">
      </div>
      <div class="mb-3">
        <label for="" class="form-label">Quantity</label>
        <input type="number" class="form-control" asp-for="@getInventoryViewModel.Quantity">
      </div>
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
          <button type="submit" class="btn btn-primary btn-lg me-md-21">Save</button>
      </div>
    </form>
</AuthorizeView>


@code {
    [Parameter]
    public GetInventoryViewModel getInventoryViewModel { get; set; }
}
